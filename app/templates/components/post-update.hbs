{{#if postUpdateOpen}}
  <button {{action 'closePostUpdate'}}>cancel</button>
  <form>
    <div class="form-group">
      <label for="author">Your name:</label>
      {{input value=author id="author" placeholder=post.author}}
    </div>
    <div class="form-group">
      <label for="title">posting title:</label>
      {{input value=title id="title" placeholder=post.title}}
    </div>
    <div class="form-group">
      <label for="content">posting body:</label>
      {{input value=content id="content" placeholder=post.content}}
    </div>
    <div class="form-group">
      <label for="image">post image:</label>
      {{input value=image id="image" placeholder=post.image}}
    </div>
    <div class="form-group">
      <label for="price">post cost:</label>
      {{input type="number" value=price id="price" placeholder=post.price}}
    </div>
    <div class="form-group">
      <label for="location">your location:</label>
      {{input value=location id="location" placeholder=post.location}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input type="date" value=date id="date" placeholder=post.date}}
    </div>
    <button {{action 'updatePost1' post}}>save post</button>
  </form>
{{else}}
  <button {{action 'openPostUpdate'}}>update post</button>
{{/if}}
