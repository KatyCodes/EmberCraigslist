{{#if addPostOpen}}
  <button {{action 'closePostAdd'}}>cancel posting</button>
  <form>
    <div class="form-group">
      <label for="author">Your name:</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="title">posting title:</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="content">posting body:</label>
      {{input value=content id="content"}}
    </div>
    <div class="form-group">
      <label for="image">post image:</label>
      {{input value=image id="image"}}
    </div>
    <div class="form-group">
      <label for="price">post cost:</label>
      {{input value=price id="price"}}
    </div>
    <div class="form-group">
      <label for="location">your location:</label>
      {{input value=location id="location"}}
    </div>
    <!-- <div class="form-group">
      <label for="date">Date</label>
      {{input type="number" type="date" value=date id="date"}}
    </div> -->
    <button {{action 'saveNewPost1'}}>save post</button>
  </form>
{{else}}
  <button {{action 'openPostAdd'}}>post to classifieds</button>
{{/if}}
